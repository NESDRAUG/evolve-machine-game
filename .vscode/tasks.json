{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "runOptions": {"instanceLimit": 4},
            // "type": "cmake",
            // "command": "build",
            "type": "process",
            "command": "${config:cmake.cmakePath}",
            "args": ["--build", "${config:cmake.buildDirectory}", "--target", "all",
                "--verbose"
            ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "close": false,
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "inputs": [
        {
            "id": "inputId",
            "type": "command",
            "command": "watch-run.getFilename",
            "args" : "compile"
        },
        {
            "id": "fileAsTarget",
            "type": "command",
            "command": "extension.commandvariable.transform",
            "args": {
                "text": "${command:extension.commandvariable.file.filePosix}",
                "find": "^/c",
                "replace": "C:",
                "flags": ""
            }
        }
    ]
}